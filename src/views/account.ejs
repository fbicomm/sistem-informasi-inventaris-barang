<%- include('./partials/header') %> 
<%- include('./partials/nav') %> 
          <div class="col-sm-6">
            <h1>Editar Conta</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <% if(typeof errors != 'undefined') { %>
        <% errors.forEach(error => { %> 
        <div class="alert alert-danger alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= error.msg %> 
        </div>
        <% }) %> 
        <% } %> 
        <% if(typeof locals.user != 'undefined' && locals.user != 'superadmin@email.com') { %>
        <!-- Change Email -->
        <div class="card card-default">
          <div class="card-header">
            <h3 class="card-title">Mudar Email</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form action="/account/changeemail?_method=put" method="post">
            <div class="card-body">
              <input type="hidden" name="oldEmail" required value="<%= usr.oldEmail || usr.email %>"/>
              <input type="hidden" name="matchPass" required value="<%= usr.matchPass || usr.password %>"/>
              <input type="hidden" name="id" required value="<%= usr.id %>"/>
              <div class="form-group">
                <label for="oldEmail">Email Antigo : </label>
                <%= usr.oldEmail || usr.email %>
              </div>
              <div class="form-group">
                <label for="email">Novo Email</label>
                <input type="email" name="email" class="form-control" required />
              </div>
              <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" name="password" class="form-control" required />
              </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
        <% } %> 
        
        <!-- Change Password -->
        <div class="card card-default">
          <div class="card-header">
            <h3 class="card-title">Mudar Senha</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form action="/account/changepassword?_method=put" method="post">
            <div class="card-body">
              <input type="hidden" name="matchPass" required value="<%= usr.matchPass || usr.password %>"/>
              <input type="hidden" name="id" required value="<%= usr.id %>"/>
              <div class="form-group">
                <label for="oldPassword">Senha Antiga</label>
                <input type="password" name="oldPassword" class="form-control" required />
              </div>
              <div class="form-group">
                <label for="password">Nova Senha</label>
                <input type="password" name="password" class="form-control" required />
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirmação de Nova Senha</label>
                <input type="password" name="confirmPassword" class="form-control" required />
              </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
          </form>
        </div>
        <!-- /.card -->

        <% if(typeof locals.user != 'undefined' && locals.user != 'superadmin@email.com') { %>
        <!-- Change Roles -->
        <div class="card card-default">
          <div class="card-header">
            <h3 class="card-title">Mudar Cargo</h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <form action="/account/changerole?_method=put" method="post">
            <div class="card-body">
              <input type="hidden" name="oldRole" required value="<%= usr.oldRole || usr.role %>"/>
              <input type="hidden" name="role" required value="user"/>
              <input type="hidden" name="matchPass" required value="<%= usr.matchPass || usr.password %>"/>
              <input type="hidden" name="id" required value="<%= usr.id %>"/>
              <div class="form-group">
                <label for="oldEmail">Cargo Atual : </label>
                <%= usr.oldRole || usr.role %>
              </div>
              <div class="form-group">
                <label for="oldEmail">Mudar Cargo Para : </label>
                user
              </div>
              <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" name="password" class="form-control" required />
              </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
        <% } %> 

      </div>
      <!-- /.container-fluid -->
    </section>
<%- include('./partials/footer') %> 